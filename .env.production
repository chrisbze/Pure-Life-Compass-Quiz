# Pure Life Compass Quiz - Production Environment Configuration
# IMPORTANT: Replace all placeholder values with your actual production credentials

# ===== SERVER CONFIGURATION =====
PORT=3000
NODE_ENV=production
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== GO HIGH LEVEL CONFIGURATION =====
# REPLACE WITH YOUR ACTUAL GHL CREDENTIALS
GHL_API_URL=https://rest.gohighlevel.com/v1
GHL_API_KEY=your_actual_ghl_api_key_here
GHL_WEBHOOK_URL=your_actual_webhook_url_here
GHL_LOCATION_ID=your_actual_location_id_here

# Pipeline configuration - GET FROM YOUR GHL ACCOUNT
GHL_PIPELINE_ID=your_actual_pipeline_id_here
GHL_PIPELINE_STAGE_ID=your_actual_stage_id_here

# Workflow IDs for each persona type - GET FROM YOUR GHL WORKFLOWS
GHL_DREAMER_WORKFLOW_ID=your_dreamer_workflow_id_here
GHL_BUILDER_WORKFLOW_ID=your_builder_workflow_id_here
GHL_DRIVER_WORKFLOW_ID=your_driver_workflow_id_here
GHL_LEADER_WORKFLOW_ID=your_leader_workflow_id_here

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===== MONITORING & LOGGING =====
LOG_LEVEL=warn
DEBUG_MODE=false
ENABLE_DEV_ROUTES=false
CORS_ENABLED=true

# ===== SECURITY =====
# Add any additional security configurations here
SESSION_SECRET=your_secure_session_secret_here